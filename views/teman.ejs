    <!-- daftar list teman dan menampilkan yang online dan offline -->
    <!-- daftar teman online -->
    <h2>TEMAN ONLINE (<%=userOnline.length%>)</h2>
    <!-- class list-group-flush, komponen bootstrap yang di gunakan sebagai untk menampilkan judul dari list-group dan membuat list-group tidak seperti tabel -->
    <div class="list-group list-group-flush" id="temanOnline"> 
      <% userOnline.forEach((user) => { %> 
        <div class="user list-group-item">
          <a href="<%=user.path%>">
            <img src="<%=user.fotoProfile%>" width="2%" alt="<%=user.name%>" style="boder-radius: 50%;">
            <p><%=user.name%></p> <hr> 
          </a>  
          <p><%=user.status%></p> 
        </div>        
      <% }); %> 
    </div>

    <h2 class="mt-5">TEMAN OFFLINE (<%=userOffline.length%>) </h2>
    <!-- class list-group-flush, komponen bootstrap yang di gunakan sebagai untk menampilkan judul dari list-group dan membuat list-group tidak seperti tabel -->
    <div class="list-group list-group-flush" id="temanOfline">
      <% userOffline.forEach((user) => { %> 
        <div class="user list-group-item">
          <a href="<%=user.path%>">
           <img src="<%=user.fotoProfile%>" width="2%" alt="<%=user.name%>" style="border-radius: 50%;">
            <p><%=user.name%></p> <hr> 
          </a>  
          <p><%=user.status%></p> 
        </div>
      <% }); %> 
    </div>
